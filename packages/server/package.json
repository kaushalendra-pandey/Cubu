{
  "private": true,
  "name": "@cubu/server",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "scripts": {
    "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
    "build": "rimraf ./dist && tsc && copyfiles -u 1 src/**/*.graphql dist/server/src",
    "watch": "tsc -w",
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test": "cross-env NODE_ENV=test jest --watchAll",
    "gen-schema-types": "ts-node src/scripts/createTypes.ts"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.17",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.15.16",
    "@types/ioredis": "^4.17.3",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.11.4",
    "@types/nodemailer": "^6.4.4",
    "@types/redis": "^2.8.31",
    "@types/uuid": "^8.3.1",
    "cross-env": "^7.0.3",
    "gql2ts": "^1.10.1",
    "jest": "^27.1.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "@gql2ts/from-schema": "^2.0.0-4",
    "@graphql-tools/schema": "^8.3.0",
    "@types/node": "^16.11.4",
    "apollo-server-express": "^3.1.2",
    "argon2": "^0.28.2",
    "connect-redis": "^6.0.0",
    "dataloader": "^1.4.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.0",
    "express-session": "^1.17.2",
    "faker": "^5.5.3",
    "graphql": "^15.5.1",
    "graphql-redis-subscriptions": "^2.4.0",
    "graphql-request": "^3.5.0",
    "ioredis": "^4.17.3",
    "merge-graphql-schemas": "^1.7.8",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1",
    "rate-limit-redis": "^2.1.0",
    "request-promise": "^4.2.6",
    "shortid": "^2.2.16",
    "subscriptions-transport-ws": "^0.9.19",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.37",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
